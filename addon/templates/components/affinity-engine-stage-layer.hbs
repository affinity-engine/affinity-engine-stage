{{#affinity-engine-animation-box-wrapper animationAdapter=animationAdapter transitions=transitions didCompleteQueue=(action resolve)}}
  {{#each layerDirectables as |directable|}}
    {{component directable.componentPath
      directable=directable
      isFocused=isFocused
      engineId=engineId
      windowId=windowId
    }}
  {{/each}}

  {{#each-in childLayers as |name directables|}}
    {{affinity-engine-stage-layer
      directables=directables
      isFocused=isFocused
      name=name
      engineId=engineId
      windowId=windowId
    }}
  {{/each-in}}
{{/affinity-engine-animation-box-wrapper}}
