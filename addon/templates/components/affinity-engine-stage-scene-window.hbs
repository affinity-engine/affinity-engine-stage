{{#ember-animation-box transitions=transitions resolve=(action resolve)}}
  {{#if screen}}
    <div class="ae-stage-scene-window-screen {{screenClassNames}}" style={{childStyle}} data-test={{hook "affinity_engine_stage_scene_window_screen"}}></div>
  {{/if}}

  <div class="ae-stage-scene-window-main {{windowClassNames}}" style={{childStyle}} data-test={{hook "affinity_engine_stage_scene_window_main"}}>
    {{affinity-engine-stage
      initialScene=sceneId
      sceneRecord=sceneRecord
      engineId=engineId
      windowId=sceneWindowId
      window=window
    }}
  </div>
{{/ember-animation-box}}
